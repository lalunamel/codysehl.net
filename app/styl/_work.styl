.navigation
	width: $first-breakpoint-width
	margin: 50px auto 0
	font-size: 1.8em
	text-align: center

	li
		padding-top: 15px

		&:before
			content: ""
			width: 10px
			margin: 0 auto
			display: block
			border-top: 2px solid $blue
			margin-bottom: 10px

		&:first-child:before, .hider &:last-child:before
			width: 0

	.hider.hidden
		display: none

.column-wrap .work-block
	&:first-child, &:nth-child(0n+2)
		margin-top: 0

.work-block
	width: $first-breakpoint-width
	margin-top: 70px
	padding: 10px

	&:last-child
		margin-bottom: 60px

	img
		width: 100%
		margin: 0 0 10px 0

	& > a
		color: $black

	.header
		font-size: 1.6em
		font-weight: 500
		text-align: left
		text-decoration: underline

		& + .header
			margin-top: 2px
			font-weight: 400
			text-decoration: none

	.description
		margin: 4px 0 0 0

@media all and (min-width: 500px)
	.work-block
		padding-left: 15%
		padding-right: 15%

@media all and (min-width: 700px)
	#mapbox-map
		display: block

	.work-block

		.header
			font-size: 1.3em

		.description
			font-size: 1.2em
			line-height: 1.1

@media all and (min-width: 900px)
	#mapbox-map
		height: 300px

	.work-block
		&.column-left, &.column-right
			padding-right: 8%
			padding-left: 4%

@media all and (min-width: 1100px)
	#mapbox-map
		height: 350px

	.work-block
		.header
			font-size: 1.5em

		.description
			font-size: 1.25em
			line-height: 1.15